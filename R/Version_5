#sofa3
matrixchain.sofa3<-
  lapply(1:length(mc.sofa3[[1]]), function(y)
    cbind(          #x    y    z
      matrix(mc.sofa3[[1]][[y]][[1]]),
      matrix(mc.sofa3[[1]][[y]][[2]]),
